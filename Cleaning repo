#!/bin/bash

# Проверка, что скрипт выполняется в корневом каталоге репозитория
if [ ! -d .git ]; then
  echo "Этот скрипт должен выполняться в корневом каталоге Git-репозитория."
  exit 1
fi

# Сброс всех отслеживаемых изменений
git reset --hard

# Удаление всех неотслеживаемых файлов и директорий
git clean -fd

echo "Репозиторий полностью очищен от изменений."
